<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="accountCell" prefHeight="250.0" prefWidth="900.0" styleClass="accounts_view_container" stylesheets="@../../styles/account-cell.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
     <Label fx:id="owner" styleClass="account_balance" text="Малько Игнат" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="25.0" />
   <Label fx:id="balance" layoutX="10.0" layoutY="10.0" styleClass="account_balance" text="10000.00" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="80.0">
      <graphic>
         <FontAwesomeIconView glyphName="DOLLAR" size="40" />
      </graphic>
   </Label>
     <Label fx:id="number" styleClass="account_number" text="**** **** **** 4444" AnchorPane.bottomAnchor="55.0" AnchorPane.leftAnchor="20.0" />
     <FontAwesomeIconView glyphName="BANK" size="50" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="20.0" />
    <HBox prefHeight="100.0" prefWidth="400.0" spacing="50.0" AnchorPane.bottomAnchor="-25.0" AnchorPane.rightAnchor="50.0">
        <Button fx:id="acceptButton" maxHeight="-Infinity" maxWidth="175.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="175.0" text="Открыть">
           <graphic>
               <FontAwesomeIconView fx:id="checkIcon" fill="WHITE" glyphName="CHECK" size="25" />
           </graphic>
        </Button>
        <Button fx:id="declineButton" maxHeight="-Infinity" maxWidth="175.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="175.0" text="Отклонить">
            <graphic>
                <FontAwesomeIconView fx:id="timesIcon" fill="WHITE" glyphName="TIMES" size="25" />
            </graphic>
        </Button>
    </HBox>
     <Text fx:id="accountType" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="account_number" text="Основной счет" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0" />
     <Text fx:id="date" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="account_number" text="Открыт: 12/9/2024" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="30.0" />
</AnchorPane>
